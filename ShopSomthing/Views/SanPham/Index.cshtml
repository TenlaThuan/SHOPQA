@model List<ShopSomthing.Models.SanPham>


<link href="~/css/admin.css" rel="stylesheet" />



<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <aside class="col-md-2 bg-dark text-white p-3 vh-100">
            <h4 class="text-center">Admin Panel</h4>
            <ul class="nav flex-column">

                <li class="nav-item"><a asp-controller="SanPham" asp-action="Index" class="nav-link text-white">🛍 Quản lý Sản phẩm</a></li>
                <li class="nav-item"><a asp-controller="NguoiDung" asp-action="Index" class="nav-link text-white">👤 Quản lý Tài khoản</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="ThongKe" class="nav-link text-white">📊 Thống kê</a></li>

            </ul>
        </aside>

        <!-- Main Content -->
        <main class="col-md-10 p-4">
            <h2 class="mb-4">Bảng quản lý</h2>

            <h4>Quản lý sản phẩm</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên</th>
                        <th>Site</th>
                        <th>Thương hiệu</th>
                        <th>Chất liệu</th>
                        <th>Xuất xứ</th>
                        <th>Giá</th>
                        <th>Công cụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td><img src="~/img/@course.HinhAnh" alt="Product" width="50"></td>                           
                            <td>@course.TenSanPham</td>
                            <td>@course.KichThuoc</td>
                            <td>@course.ThuongHieu</td>
                            <td>@course.ChatLieu</td>
                            <td>@course.XuatXu</td>
                            <td>@course.Gia</td>
                            <td>
                                <button class="btn btn-warning btn-sm"> <a href="@Url.Action("Edit", "SanPham", new { id = course.MaSanPham })">Sửa</a></button>
                                <button class="btn btn-warning btn-sm"> <a href="@Url.Action("Delete", "SanPham", new { id = course.MaSanPham })">Xóa </a></button>
                            </td>
                        </tr>
                    }
                    <tr>
                    
                </tbody>
            </table>
            <button class="btn btn-success"><a href="@Url.Action("Create", "SanPham")" class="btn btn-primary mb-3">Thêm sản phẩm</a></button>
        </main>
    </div>
</div>




                

        

            
                   
